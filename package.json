{
  "scripts": {
    "build": "npm run copy && node ./bin/main.js",
    "copy": "cp public/* dist/",
    "make": "elm-make ./elm/Home.elm --output ./dist/bundle.js",
    "serve": "http-server ./dist -p 3000",
    "watch": "onchange elm/*.elm -- npm run build && onchange public/* -- npm run copy"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "elm-static-html-lib": "^0.1.0",
    "graphql-request": "^1.4.1",
    "ramda": "^0.25.0",
    "string-replace-stream": "0.0.2"
  }
}
